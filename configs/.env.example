# MMemory 环境变量配置示例
# 你可以使用环境变量来覆盖配置文件中的设置
# 环境变量的命名规则：MMEMORY_ + 配置路径（点号替换为下划线）
# 例如：bot.token -> MMEMORY_BOT_TOKEN

# Telegram Bot 配置
MMEMORY_BOT_TOKEN=your_telegram_bot_token_here
MMEMORY_BOT_DEBUG=false
MMEMORY_BOT_WEBHOOK_ENABLED=false
MMEMORY_BOT_WEBHOOK_URL=https://your-domain.com/webhook
MMEMORY_BOT_WEBHOOK_PORT=8443

# 数据库配置
MMEMORY_DATABASE_DRIVER=sqlite3
MMEMORY_DATABASE_DSN=./data/mmemory.db
MMEMORY_DATABASE_MAX_OPEN_CONNS=25
MMEMORY_DATABASE_MAX_IDLE_CONNS=10

# 服务器配置
MMEMORY_SERVER_PORT=8080
MMEMORY_SERVER_HOST=0.0.0.0

# 调度器配置
MMEMORY_SCHEDULER_TIMEZONE=Asia/Shanghai
MMEMORY_SCHEDULER_MAX_WORKERS=10

# 日志配置
MMEMORY_LOGGING_LEVEL=info
MMEMORY_LOGGING_FORMAT=json
MMEMORY_LOGGING_OUTPUT=stdout
MMEMORY_LOGGING_FILE_PATH=./data/mmemory.log

# 应用配置
MMEMORY_APP_NAME=MMemory
MMEMORY_APP_VERSION=v0.0.1
MMEMORY_APP_ENVIRONMENT=development

# 监控配置
MMEMORY_MONITORING_ENABLED=true
MMEMORY_MONITORING_PORT=9090
MMEMORY_MONITORING_PATH=/metrics